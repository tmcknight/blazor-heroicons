root = true

[*]
indent_style = tab
indent_size = 4
end_of_line = lf
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[*.{yml,yaml}]
indent_style = space
indent_size = 2

[*.{json,md}]
indent_style = space
indent_size = 2

[*.py]
indent_style = tab
indent_size = 4

[*.razor]
indent_style = tab
indent_size = 4

[*.cs]
indent_style = tab
indent_size = 4
